{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "make",
            "args": [
                "DEBUG=true"
            ],
            "group": "build",
            "problemMatcher": "$gcc",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": false
            }
        },
        {
            "type": "cppbuild",
            "label": "build tree",
            "command": "/bin/clang++",
            "args": [
                "-fdiagnostics-color=always",
                "-Wall",
                "-Wextra",
                "-Wshadow",
                "-g3",
                "main.cpp",
                "-o",
                "main"
            ],
            "options": {
                "cwd": "${workspaceFolder}/_tree"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        },
        {
            "type": "cppbuild",
            "label": "C/C++: clang++ build active file",
            "command": "/bin/clang++",
            "args": [
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-Wall",
                "-Wextra",
                "-Wshadow",
                "-std=c++98",
                "-I${workspaceFolder}/42TESTERS-CONTAINERS",
                "-I${workspaceFolder}/42TESTERS-CONTAINERS/VECTOR",
                "-I${workspaceFolder}/42TESTERS-CONTAINERS/MAP",
                "-I${workspaceFolder}/containers_test/srcs",
                "-I${workspaceFolder}/src",
                "-g3",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}
